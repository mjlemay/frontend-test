@import "../../styles/global.styl"

.Login
  width 340px
  height 340px
  text-align center
  top 100px
  align(h)

  h1
    color $fontTitleColor
    font-size 26px
    font-weight 700
    letter-spacing 0.25em
    text-align center
    margin 0 auto 55px

  input
    display block
    font-weight 300
    text-align left
    background-color $inputFieldBGColor
    width 100%
    height 35px
    border none
    font-size 1em
    letter-spacing 0.0125em
    color $inputFieldTextColor
    text-indent 15px
    border-radius 5px
    margin-bottom 15px
    transition background-color $animationSpeed $animationType

    &:focus
      outline none
      background-color $inputFieldBGFocusColor

  button
    display inline-block
    font-weight 600
    background-color $buttonBGColor
    padding auto 10px
    height 35px
    border none
    font-size 1em
    letter-spacing 0.0125em
    color $buttonTextColor
    border-radius 10px
    margin 0 auto  15px
    cursor pointer
    transition background-color $animationSpeed $animationType

    &:hover
      background-color $buttonBGFocusColor
